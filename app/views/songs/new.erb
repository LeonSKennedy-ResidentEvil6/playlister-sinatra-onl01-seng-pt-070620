<h1>Create a new song</h1>

<form action="/songs" method="post">

<label>Name:<label>
    <input type="text" name="song[name]" id="Name"><br>

<label>Artist:</label>
    <input type="text" name="song[artist]" id="Artist Name"><br>

<label>Genres:<label><br>
    <% @genres.each do |genre| %>
    <input id="<%= genre.name%>" type="checkbox" name="song[genres][]" value="<%= genre.id%><%= genre.name%>"><br>
    <% end %>

<br>

<input type="submit" value="Create">

</form>